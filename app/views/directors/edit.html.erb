<div class="container mt-4">
  <h1 class="mb-4">Edit Director</h1>

  <%= render "form", director: @director %>

  <div class="d-flex gap-2 mt-3">
    <%= link_to "Cancel", @director, class: "btn btn-secondary" %>
    <%= button_to "Delete", @director, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>