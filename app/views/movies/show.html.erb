<div class="container mt-4">
  <div class="card">
    <% if @movie.cover.attached? %>
      <%= image_tag @movie.cover, class: "img-fluid card-img-top", style: "max-height: 250px; object-fit: cover; width: 100%;" %>
    <% end %>
    
    <div class="card-body">
      <h1 class="card-title"><%= @movie.title %></h1>
      <p class="card-text"><%= @movie.description %></p>
      
      <div class="row">
        <div class="col-md-6">
          <p><strong>Duration:</strong> <%= @movie.duration_minutes %> minutes</p>
          <p><strong>Country:</strong> <%= @movie.origin_country %></p>
        </div>
        <div class="col-md-6">
          <p><strong>Genre:</strong> <%= link_to @movie.genre.name, @movie.genre, class: "text-decoration-none" %></p>
          <p><strong>Director:</strong> <%= link_to "#{@movie.director.first_name} #{@movie.director.last_name}", @movie.director, class: "text-decoration-none" %></p>
        </div>
      </div>
    </div>
    
    <div class="card-footer">
      <%= link_to "Back", movies_path, class: "btn btn-secondary mr-2" %>
      <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-warning" %>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-12">
      <h3>Reviews</h3>
      
      <% if @reviews.any? %>
        <div class="row">
          <% @reviews.each do |review| %>
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <p class="card-text"><%= review.comment %></p>
                  <p class="card-text"><small class="text-muted">Rating: <%= review.rating %>/5</small></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p>No reviews yet.</p>
      <% end %>

      <h4 class="mt-4">Add a Review</h4>
      <%= form_with(model: [@movie, Review.new], local: true) do |form| %>
        <div class="form-group mb-3">
          <%= form.label :rating, "Rating" %>
          <%= form.select :rating, options_for_select(1..5), {}, class: 'form-control' %>
        </div>
        <div class="form-group mb-3">
          <%= form.label :comment, "Comment" %>
          <%= form.text_area :comment, class: 'form-control' %>
        </div>
        <%= form.submit 'Add Review', class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>