<div class="container mt-4">
  <h1><%= @movie.title %></h1>

  <div class="card p-3">
    <p><strong>Description:</strong> <%= @movie.description %></p>
    <p><strong>Duration:</strong> <%= @movie.duration_minutes %> minutes</p>
    <p><strong>Country:</strong> <%= @movie.origin_country %></p>
    <p><strong>Genre:</strong> <%= link_to @movie.genre.name, @movie.genre, class: "text-decoration-none" %></p>
    <p><strong>Director:</strong> <%= link_to "#{@movie.director.first_name} #{@movie.director.last_name}", @movie.director, class: "text-decoration-none" %></p>
  </div>

  <div class="mt-3">
    <%= link_to "Back", movies_path, class: "btn btn-secondary" %>
    <%= link_to "Edit", edit_movie_path(@movie), class: "btn btn-warning" %>
  </div>
</div>