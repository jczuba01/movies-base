<div class="container mt-4">
  <h1 class="mb-4">Edit Genre</h1>

  <%= render "form", genre: @genre %>

  <div class="d-flex gap-2 mt-3">
    <%= link_to "Cancel", @genre, class: "btn btn-secondary" %>
    <%= button_to "Delete", @genre, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>