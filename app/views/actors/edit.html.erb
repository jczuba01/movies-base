<div class="container mt-4">
  <h1 class="mb-4">Edit Actor</h1>

  <%= render "form", actor: @actor %>

  <div class="d-flex gap-2 mt-3">
    <%= link_to "Cancel", @actor, class: "btn btn-secondary" %>
    <%= button_to "Delete", @actor, method: :delete, class: "btn btn-danger", data: { turbo_confirm: "Are you sure?" } %>
  </div>
</div>