<div class="container mt-4">
  <h1><%= @director.first_name %> <%= @director.last_name %></h1>

  <p class="text-muted">
  <strong>Birth Date:</strong> <%= @director.birth_date %>
  </p>

  <div class="mt-3 d-flex gap-2">
  <%= link_to "Back to Movies", movies_path, class: "btn btn-secondary" %>
  <%= link_to "Edit", edit_director_path(@director), class: "btn btn-warning" %>
  <%= link_to "Director List", directors_path, class: "btn btn-primary" %>
  </div>
</div>