<div class="container mt-4">
  <h1>Genres</h1>

  <%= link_to "New Genre", new_genre_path, class: "btn btn-success mb-3" %>

  <div id="genres" class="list-group">
    <% @genres.each do |genre| %>
      <%= link_to genre.name, genre, class: "list-group-item list-group-item-action" %>
    <% end %>
  </div>
</div>
